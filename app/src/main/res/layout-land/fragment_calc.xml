<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="#070707"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="#070707"
            android:textSize="20sp">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tvSeven"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvEighnt"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvNine"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvDivision"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="/"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvClear"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="AC"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvCos"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="cos"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvsqrt"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="√"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tvFour"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvFive"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="5"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvSix"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvMul"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="*"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvNegat"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="+/-"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvSin"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="sin"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvsquare"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="Х²"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tvOne"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvTwo"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvThree"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvMinus"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="-"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvPower"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="^"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvTan"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="tan"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvtripl"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="x³"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tvZero"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="0"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvDot"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_grey"
                    android:text="."
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvPlus"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="+"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvEqual"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="="
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvCot"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="cot"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/tvfact"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_yellow"
                    android:text="x!"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>